<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/ncapback"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.ncap.irfan.ncap.Welcome">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="NCAP"
                android:padding="14dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="20sp"
                />

        </RelativeLayout>

    <ImageView
        android:layout_marginTop="15dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp" />



   <TextView
       android:fontFamily="monospace"
       android:textSize="20dp"
       android:textColor="#FFFFFF"
       android:textAlignment="center"
       android:text="Carbonaceous Aerosol and Climate"
       android:layout_marginTop="15dp"
       android:gravity="center"
       android:layout_marginStart="30dp"
       android:layout_marginEnd="30dp"
       android:layout_gravity="center"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:hint="Enter your loc ation"
            android:gravity="start|top"
            android:id="@+id/location"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/textround"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout>


    <Button
        android:id="@+id/StartSurvey"
        android:textSize="20dp"
        android:fontFamily="monospace"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:text="Start Survey"
        android:background="@drawable/btround"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp" />


</LinearLayout>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_centerInParent="true"/>
</RelativeLayout>
