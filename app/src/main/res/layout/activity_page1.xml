<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context="com.ncap.irfan.ncap.Vehicle">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/Q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:padding="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="Q 1 : Type of Vehicle?"
        android:textColor="#000000"
        android:textSize="15dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButtonCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Car"
                android:textColor="#000000"
                android:textSize="15dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="84dp" />

            <RadioButton
                android:id="@+id/radioButtonSUV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="SUV"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="125dp" />

            <RadioButton
                android:id="@+id/radioButtonAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Auto"
                android:textColor="#000000"
                android:textSize="15dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="125dp" />

            <RadioButton
                android:id="@+id/radioButton2W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="2W"
                android:textColor="#000000"
                android:textSize="15dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="125dp" />

            <RadioButton
                android:id="@+id/radioButtonTruck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Truck"
                android:textColor="#000000"
                android:textSize="15dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="125dp" />

            <RadioButton
                android:id="@+id/radioButtonOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Other"
                android:textColor="#000000"
                android:textSize="15dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="125dp" />

        </RadioGroup>


    </RelativeLayout>

</LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c2c2c2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Q2"
            android:text="Q 2 : Type of Fuel?"
            android:gravity="start"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:padding="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <RelativeLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radio2"

                >
                <RadioButton
                    android:id="@+id/radioButtonPetrol"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:text="Petrol"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="84dp"/>
                <RadioButton
                    android:id="@+id/radioButtonDiesel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"
                    android:text="Diesel"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="125dp"/>
                <RadioButton
                    android:id="@+id/radioButtonCNG"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:text="CNG"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="125dp"/>
                <RadioButton
                    android:id="@+id/radioButtonLPG"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"
                    android:text="LPG"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="125dp"/>

            </RadioGroup>


        </RelativeLayout>

    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c2c2c2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="Q 3 : Make/ Model/ Year"
                android:textColor="#000000"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/modelA"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/textround"
                    android:gravity="start|top"
                    android:hint="Make Date:"
                    android:inputType="textCapCharacters"
                    android:paddingBottom="18dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingEnd="18dp"
                    android:paddingStart="18dp"
                    android:paddingTop="18dp" />



            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
